<div class="header-search">
  <form action="{{ routes.search_url }}" method="get" role="search" class="search-form">
    <input
      id="{{ input_id }}"
      class="search-form__input"
      type="search"
      name="q"
      placeholder="{{ 'general.search.search' | t }}"
      aria-label="{{ 'general.search.search' | t }}"
      {%- if settings.predictive_search_enabled -%}
        role="combobox"
        aria-expanded="false"
        aria-controls="predictive-search-results"
        aria-autocomplete="list"
        autocorrect="off"
        autocomplete="off"
        autocapitalize="off"
        spellcheck="false"
      {%- endif -%}
    >
    <button type="submit" class="search-form__button" aria-label="{{ 'general.search.search' | t }}">
      <svg class="icon icon-search" aria-hidden="true" focusable="false">
        <use href="#icon-search"></use>
      </svg>
    </button>

    {%- if settings.predictive_search_enabled -%}
      <div id="predictive-search-results" class="predictive-search__results" data-predictive-search>
        {%- render 'loading-spinner', class: 'predictive-search__loading' -%}
      </div>
      <span class="predictive-search__status visually-hidden" role="status" aria-hidden="true"></span>
    {%- endif -%}
  </form>
</div>
